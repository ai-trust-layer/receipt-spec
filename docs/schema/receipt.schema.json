{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Receipt v1",
  "type": "object",
  "required": ["id", "issued_at", "output", "output_hash"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "issued_at": { "type": "string", "format": "date-time" },
    "output": { "type": "string" },
    "output_hash": {
      "type": "string",
      "pattern": "^(?i:sha256:)?[0-9a-fA-F]{64}$"
    }
  },
  "additionalProperties": true
}
