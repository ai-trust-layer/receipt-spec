{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Receipt v1",
  "type": "object",
  "required": [
    "id",
    "issued_at",
    "output_hash"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "issued_at": {
      "type": "string",
      "format": "date-time"
    },
    "model_version": {
      "type": "string",
      "minLength": 1
    },
    "policy_version": {
      "type": "string",
      "minLength": 1
    },
    "policy_hash": {
      "type": "string",
      "pattern": "^sha256:[A-Fa-f0-9]{64}$"
    },
    "input_hash": {
      "type": "string",
      "oneOf": [
        {
          "pattern": "^[a-f0-9]{64}$"
        },
        {
          "pattern": "^sha256:[A-Fa-f0-9]{64}$"
        }
      ]
    },
    "output_hash": {
      "type": "string",
      "oneOf": [
        {
          "pattern": "^[a-f0-9]{64}$"
        },
        {
          "pattern": "^sha256:[A-Fa-f0-9]{64}$"
        }
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "proof_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "txid"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "txid": {
            "type": "string",
            "pattern": "^0x[a-f0-9]{64}$"
          },
          "chain_id": {
            "type": "integer",
            "minimum": 0
          },
          "network": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "anchored_at": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": true
      }
    },
    "trustscore": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "signature": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}